<?xml version="1.0" encoding="UTF-8"?>

<!-- This file contains job definitions in schema version 2.0 format -->

<job-scheduling-data xmlns="http://quartznet.sourceforge.net/JobSchedulingData" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.0">

  <processing-directives>
    <overwrite-existing-data>true</overwrite-existing-data>
  </processing-directives>

  <schedule>

    <!--Monthly测试 任务配置-->
    <job>
      <name>MonthlyJob</name>
      <group>SheduleJobs</group>
      <description>MonthlyJob测试</description>
      <job-type>QuartzJobManager.MonthlyJob,QuartzJobManager</job-type>
      <durable>true</durable>
      <recover>false</recover>
    </job>
    <trigger>
      <cron>
        <name>MonthlyJobTrigger</name>
        <group>SheduleJobs</group>
        <job-name>MonthlyJob</job-name>
        <job-group>SheduleJobs</job-group>
        <start-time>2015-01-22T00:00:00+08:00</start-time>
        <cron-expression>0/3 * * * * ?</cron-expression>
      </cron>
    </trigger>



    <!--Daily测试 任务配置-->
    <job>
      <name>DailyJob</name>
      <group>SheduleJobs</group>
      <description>DailyJob测试</description>
      <job-type>QuartzJobManager.DailyJob,QuartzJobManager</job-type>
      <durable>true</durable>
      <recover>false</recover>
    </job>
    <trigger>
      <cron>
        <name>DailyJobTrigger</name>
        <group>SheduleJobs</group>
        <job-name>DailyJob</job-name>
        <job-group>SheduleJobs</job-group>
        <start-time>2015-01-22T00:00:00+08:00</start-time>
        <cron-expression>0/5 * * * * ?</cron-expression>
      </cron>
    </trigger>

  </schedule>
</job-scheduling-data>