@{
    ViewBag.Title = "AddMember";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <div class="ibox float-e-margins">
            <div class="ibox-content">
                <form class="form-horizontal m-t" id="addcoutomer" method="post" action="/member/addmember">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">顾客姓名：</label>
                        <div class="col-sm-8">
                            <input id="GKMC" name="GKMC" class="form-control" type="text">

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">手机号码：</label>
                        <div class="col-sm-8">
                            <input id="SJ" name="SJ" class="form-control" type="text" aria-required="true" aria-invalid="false" class="valid">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">生日：</label>
                        <div class="col-sm-8">
                            <div class="input-group date">
                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                <input type="text" class="form-control" id="SR" name="SR">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">性别：</label>
                        <div class="col-sm-8">
                            <select class="form-control m-b" name="SEX" id="SEX">
                                <option value="女" selected="selected">女</option>
                                <option value="男">男</option>
                            </select>

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-8 col-sm-offset-3">
                            <button class="btn btn-primary" type="submit">提交</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

@section scripts{
    <script type="text/javascript">
        // 手机号码验证
        $.validator.addMethod("isMobile", function (value, element) {
            var length = value.length;
            var mobile = /^(13[0-9]{9})|(18[0-9]{9})|(14[0-9]{9})|(17[0-9]{9})|(15[0-9]{9})$/;
            return this.optional(element) || (length == 11 && mobile.test(value));
        }, "请正确填写您的手机号码");

        $().ready(function () {

            laydate.render({
                elem: "#SR" //指定元素
            });

            // validate signup form on keyup and submit
            var icon = "<i class='fa fa-times-circle'></i> ";
            $("#addcoutomer").validate({
                rules: {
                    GKMC: "required",
                    SJ: {
                        required: true,
                        isMobile: true,
                    },
                    SR: {
                        required: true
                    }
                },
                messages: {
                    GKMC: icon + "请输如顾客姓名",
                    SJ: {
                        required: icon + "请输入手机号码",
                        isMobile: "手机号格式不正确"
                    },
                    SR: {
                        required: icon + "请输入顾客生日",
                        minlength: icon + "用户名必须两个字符以上"
                    }
                },
                submitHandler: function (form) {
                    $.post($("#addcoutomer").attr('action'), $("#addcoutomer").serialize(), function (result) {
                        if (result.code == 0) {
                            layer.alert('添加成功', function () {
                                parent.location.reload();
                                parent.layer.closeAll();
                            })
                        } else {
                            layer.alert('添加失败')
                        }
                    });
                    return false;
                }
            });
        });
    </script>
}