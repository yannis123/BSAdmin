@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper wrapper-content">

    <div class="panel panel-default">
        <div class="panel-body">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    商品查询
                </div>
                <div class="panel-body">
                    <form role="form" class="form-inline" method="post">
                        <div class="form-group">
                            <label for="UserName" class="control-label">商品编码:</label>
                            <input type="text" name="KHDM" placeholder="请输入商品编码" id="UserName" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="Password" class="control-label">商品名称:</label>
                            <input type="text" name="KHMC" placeholder="请输入商品名称" id="Password" class="form-control">
                        </div>
                        <button class="btn btn-white" type="submit">查询</button>
                    </form>
                </div>

            </div>
            <div class="panel panel-primary">
                <div class="panel-body">
                    <div class="ibox-content">
                        <table id="exampleTableFromData" data-mobile-responsive="true">
