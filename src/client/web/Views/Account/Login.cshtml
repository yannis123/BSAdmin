@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

    <title>MR_VIP - 登录</title>
    <meta name="keywords" content="">
    <meta name="description" content="">
    <link href="/content/css/bootstrap.min.css" rel="stylesheet">
    <link href="/content/css/font-awesome.css?v=4.4.0" rel="stylesheet">
    <link href="/content/css/animate.css" rel="stylesheet">
    <link href="/content/css/style.css" rel="stylesheet">
    <link href="/content/css/login.css" rel="stylesheet">
    <script src="/content/js/jquery.min.js?v=2.1.4"></script>
    <script src="/content/js/login.js"></script>
    <!--[if lt IE 9]>
    <meta http-equiv="refresh" content="0;ie.html" />
    <![endif]-->
    <script>
        if (window.top !== window.self) {
            window.top.location = window.location;
        }
    </script>

</head>
@{

    string bg = "/uploadFiles/index.jpg";
    if (File.Exists(AppDomain.CurrentDomain.BaseDirectory + "uploadFiles\\" + "index.jpg"))
    {
        bg = "style=background-image:url(" + bg + ")";
    }
    else
    {
        bg = string.Empty;
    }
}
<body class="signin" @(bg)>
    <div class="signinpanel">
        <div class="row">
            <div class="col-sm-7">
                <div class="signin-info">
                    <div class="logopanel m-b">
                        <h1 style="color:gold;">欢迎使用  <strong>In's VIP充值系统</strong></h1>
                    </div>
                    <div class="m-b"></div>
                    <h4></h4>
                    @*<ul class="m-b">
                            <li><i class="fa fa-arrow-circle-o-right m-r-xs"></i> 优势一</li>
                            <li><i class="fa fa-arrow-circle-o-right m-r-xs"></i> 优势二</li>
                            <li><i class="fa fa-arrow-circle-o-right m-r-xs"></i> 优势三</li>
                            <li><i class="fa fa-arrow-circle-o-right m-r-xs"></i> 优势四</li>
                            <li><i class="fa fa-arrow-circle-o-right m-r-xs"></i> 优势五</li>
                        </ul>*@
                    @*<strong>还没有账号？ <a href="#">立即注册&raquo;</a></strong>*@
                </div>
            </div>
            <div class="col-sm-5">
                <form method="post" action="/account/login">
                    <h4 class="no-margins">登录：</h4>
                    @*<p class="m-t-md">登录到H+后台主题UI框架</p>*@
                    <input type="text" class="form-control uname" placeholder="用户名" name="UserName" />
                    <input type="password" class="form-control pword m-b" placeholder="密码" name="Password" />
                    <button class="btn btn-warning btn-block" id="loginbtn">登录</button>
                </form>
            </div>
        </div>
        <div class="signup-footer">
            <div class="pull-left">
                &copy; 2018 All Rights Reserved.
            </div>
        </div>
    </div>
</body>

</html>
